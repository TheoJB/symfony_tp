{% extends 'base.html.twig' %}

{% block title %}Formation {{id}}{% endblock %}

{% block body %}
<div class="jumbotron">
  <h1 class="display-4">{{formation.nom}}</h1>
  <p class="lead">{{formation.description}}</p>
  <hr class="my-4">

  <p>Stages :</br></br></br>
  {% for stageCourant in formation.stages %}
    {% if loop.last %}
        {{ stageCourant.intitule }}
        <p>Entreprise : <a href="{{ path('pro_stages_entrepriseStage',{ id : stageCourant.entreprise.id }) }}">{{ stageCourant.entreprise.nom }}</a></p>
        <p>Mail : {{stageCourant.adresseMail}}</p>
        <a class="btn btn-primary" href='{{path('pro_stages_stage',{id:stageCourant.id})}}' role="button">En savoir plus</a>
        </br>
        </br>
    {% else %}
    {{ stageCourant.intitule }}
    <p>Entreprise : <a href="{{ path('pro_stages_entrepriseStage',{ id : stageCourant.entreprise.id }) }}">{{ stageCourant.entreprise.nom }}</a></p>
    <p>Mail : {{stageCourant.adresseMail}}</p>
    <a class="btn btn-primary" href='{{path('pro_stages_stage',{id:stageCourant.id})}}' role="button">En savoir plus</a>.

    </br>
    </br>
    {% endif %}
{% endfor %}</p>
{% endblock %}
